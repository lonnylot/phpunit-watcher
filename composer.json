{
    "name": "lonnylot/dusk-watcher",
    "description": "Automatically rerun Laravel Dusk tests when source code changes",
    "keywords": [
        "spatie",
        "dusk-watcher"
    ],
    "homepage": "https://github.com/lonnylot/phpunit-watcher/tree/dusk",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0",
        "clue/stdio-react": "^1.0",
        "jolicode/jolinotif": "^2.0",
        "symfony/console": "^3.0|^4.0",
        "symfony/process": "^3.0|^4.0",
        "symfony/yaml": "^3.0|^4.0",
        "yosymfony/resource-watcher": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0|^7.0"
    },
    "autoload": {
        "psr-4": {
            "Lonnylot\\PhpUnitWatcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lonnylot\\PhpUnitWatcher\\Test\\": "tests"
        },
        "files": [
            "tests/helpers.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "bin": [
        "dusk-watcher"
    ]
}
